testdir = $(srcdir)

# compiler
CC = mpicc
ccdebugflags = -O0 -g3 -ansi -Wall -Wno-unused-variable -Wno-unused-function
ccoptflags = -O3

# system utilities
ranlib = ranlib
ar = ar

