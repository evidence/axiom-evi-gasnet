# variables added here should also go in Makefile.common, and vice-versa

srcdir = . # passed in on command-line
altincdir = $(srcdir)/..
testdir = $(srcdir)/../amxtests

# compiler
CC = @MPI_CC@
ccdebugflags = @MPI_CFLAGS@ -g 
ccoptflags =   @MPI_CFLAGS@ 

# system utilities
ranlib = @RANLIB@
ar = @AR@

# stuff normally set by the pre-baked makefiles
platform_defines = @TIC_MACHINE_DEFINES@ -DUNIX
platform_libraries = @LIBS@ @MPI_LIBS@
platform_ldflags = @LDFLAGS@

@PLATFORM_ILP32_FALSE@  testprograms_ILP32only =
@PLATFORM_ILP32_FALSE@  apputils_flags = -DAPPUTILS_OMIT_READWRITE
