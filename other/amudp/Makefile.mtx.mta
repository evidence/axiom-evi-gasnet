# Get default settings for everything
include Makefile.common

# additional defines
# must include, minimally, a define to identify the platform
platform_defines = -DUNIX -DMTX -DMTA

# disable ILP32 tests
testprograms_ILP32only =
apputils_flags = -DAPPUTILS_OMIT_READWRITE

CC = cc 
CCFLAGS = -display_error_number -WS 111,174,238
ccdebugflags = -g2 $(CCFLAGS)
ccoptflags = -O2 $(CCFLAGS)
CXX = c++ 
CXXFLAGS = -display_error_number -WS 111,174,238,616,1091 -exceptions
cxxdebugflags = -g2 $(CXXFLAGS)
cxxoptflags = -O2 $(CXXFLAGS)

# ------- optional, changed from template ---------
# additional libraries and/or library directories
platform_libraries =

